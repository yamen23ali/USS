<br/>
<div class="container">
 <table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.active %></td>
        <td><%= link_to icon('show'), category %></td>
        <td><%= link_to icon('edit'), edit_category_path(category) %></td>
        <td><%= link_to icon('remove'), category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
 </table>

 <div class="form-group">
    <div class="col-lg-1">
       <%= link_to 'New Category', new_category_path, class: "btn btn-success" %>
    </div>
  </div>

</div>

