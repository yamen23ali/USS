<div class="container">
 
 <div class="well bs-component col-lg-4 col-lg-offset-4">

 <fieldset>
   <legend>Sub Category</legend>

  <div class="form-group">
       <label for="name" class="control-label">Name :</label>
       <label class="control-label"><%= @sub_category.name %></label>
  </div>

  <div class="form-group">
       <label for="name" class="control-label">Category :</label>
       <label class="control-label"><%= Category.find(@sub_category.category_id).name %></label>
  </div>

  <div class="form-group">
       <label for="name" class="control-label">Active :</label>
       <label class="control-label"><%= @sub_category.active %></label>
  </div>

  <div class="form-group">
    <%= link_to 'Edit', edit_sub_category_path(@sub_category), class: "btn btn-success" %>
    <%= link_to 'Back', sub_categories_path, class: "btn btn-danger" %>
  </div>

  </fieldset>

 </div>
</div>