<br/>
<div class="container">
 <table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Active</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sub_categories.each do |sub_category| %>
      <tr>
        <td><%= sub_category.name %></td>
        <td><%= sub_category.active %></td>
        <td><%= sub_category.category.name %></td>
        <td><%= link_to icon('show'), sub_category %></td>
        <td><%= link_to icon('edit'), edit_sub_category_path(sub_category) %></td>
        <td><%= link_to icon('remove'), sub_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="form-group">
    <div class="col-lg-1">
       <%= link_to 'New Sub category', new_sub_category_path, class: "btn btn-success" %>
    </div>
  </div>

</div>