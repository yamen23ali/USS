<br/>
<div class="container">
  <div class="row">
    <div class= "col-lg-6 col-lg-offset-3">
      <div class="well bs-component">
        <%= form_for(@sub_category , html: { class: "form-horizontal" } ) do |f| %>

        <% if @sub_category.errors.any? %>
          <div id="error_explanation">
            <h2>
              <%= pluralize(@sub_category.errors.count, "error") %> prohibited this Sub category from being saved:
            </h2>

            <ul>
              <% @sub_category.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <fieldset>
          <legend>Sub Category</legend>

          <div class="form-group">
            <label for="name" class="col-lg-2 control-label">Name</label>

            <div class="col-lg-10">
              <%= f.text_field :name, class: 'form-control' , placeholder: 'Name' , autofocus: true %>
            </div>
          </div>

          <div class="form-group">
              <label for="category_id" class="col-lg-2 control-label">Category</label>
              
              <div class="col-lg-5">
                <%= f.collection_select :category_id ,  Category.where(active: true) , :id , 
                    :name ,{}, 
                    { :class => "selectpicker", "data-style" => "btn-warning", 
                      "data-live-search" => "true" }  %>
              </div>
          </div>

          <div class="form-group">
            <div class="checkbox">
              <div class="col-lg-4 col-lg-offset-2 ">
                <%= f.check_box :active %> Active
              </div>
            </div>
          </div>

          <div class="form-group">
            <div class="col-lg-1 col-lg-offset-4">
              <% if @sub_category.id.nil? %>
                <%= f.submit "Create", class: "btn btn-success" %>  
              <% else %>
                <%= f.submit "Update", class: "btn btn-success" %>  
              <% end %>
            </div>

            <div class="col-lg-5 col-lg-offset-2">
              <%= button_to "Cancel", sub_categories_path , class: "btn btn-danger" %>
            </div>
          </div>

        </fieldset>
        <% end %>
      </div>
    </div>
  </div>
</div>