<br/>
<div class="container">
 <table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @descriptors.each do |descriptor| %>
      <tr>
        <td><%= descriptor.name %></td>
        <td><%= descriptor.active %></td>
        <td><%= link_to icon('show'), descriptor %></td>
        <td><%= link_to icon('edit'), edit_descriptor_path(descriptor) %></td>
        <td><%= link_to icon('remove'), descriptor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

 <div class="form-group">
    <div class="col-lg-1">
       <%= link_to 'New Descriptor', new_descriptor_path, class: "btn btn-success"%>
    </div>
  </div>

</div>
